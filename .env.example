# Application Configuration
APP_NAME=AI/ML Playground API
DEBUG=False
HOST=0.0.0.0
PORT=5000

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=postgresql://username@localhost:5432/database_name

# Security
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/ML Model Paths
MODELS_DIR=./trained_models

# External API Keys (Optional - leave empty if not using)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# DevLab Settings
DEVLAB_DOCKER_IMAGE=python:3.9-slim
DEVLAB_EXECUTION_TIMEOUT=30
DEVLAB_MAX_MEMORY_MB=512
DEVLAB_MAX_CPU_PERCENT=50
DEVLAB_NETWORK_ISOLATION=True

# Logging
LOG_LEVEL=INFO
